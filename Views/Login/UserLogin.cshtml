@model BusinessModel.LoginCredentials

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="login-page">
    <div class="image-section">
        <img src="~/TaskandTimeSheet.png" alt="Login Image">
    </div>
    <div class="form-section">
        <form asp-action="UserLogin" method="post">
            <div class="imgcontainer">
                <img src="~/office boy.jpg" alt="Avatar" class="avatar">
            </div>
            <div class="container">
                <label asp-for="LoginName"><b>Username</b></label>
                <input type="text" asp-for="LoginName" class="form-control" value="johndoe" placeholder="Enter Username" name="LoginName" required>

                <label asp-for="Password"><b>Password</b></label>
                <input type="password" asp-for="Password" class="form-control" value="admin@123" placeholder="Enter Password" name="Password" required>

                <button type="submit">Login</button>
                <label>
                    <input type="checkbox" checked="checked" name="remember"> Remember me
                </label>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        margin: 0;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-page {
        display: flex;
        width: 100%;
        height: 100vh;
    }

    .image-section {
        width: 80%;
        background-color: #f1f1f1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .image-section img {
            width: 100%;
            height: 100%;
        }

    .form-section {
        width: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .container {
        width: 80%;
        padding: 16px;
        margin-left: 64px;
    }

    input[type=text], input[type=password] {
        width: 100%;
        padding: 12px 16px;
        margin: 12px 0;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-sizing: border-box;
        background-color: #f9f9f9;
        transition: border-color 0.3s;
    }

        input[type=text]:focus, input[type=password]:focus {
            border-color: #04AA6D;
            outline: none;
        }

    button {
        background: linear-gradient(114deg, rgba(0,210,255,1) 4%, rgba(2,0,36,1) 100%); /* linear-gradient(114deg, rgba(230,56,117,1) 4%, rgba(50,2,132,1) 100%); */ /* linear-gradient(90deg, #0e0907, #1e90ff, #7c9e7c); */
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        border-radius: 10px;
        font-size : large;
    }

        button:hover {
            opacity: 0.8;
        }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 10px;
        color: #333;
    }

    input[type=checkbox] {
        margin-top: 10px;
    }

    .imgcontainer {
        text-align: center;
        margin: 24px 0 12px 0;
        position: relative;
    }

    img.avatar {
        width: 35%;
        border-radius: 50%;
    }
</style>
